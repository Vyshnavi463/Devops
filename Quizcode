print('Welcome to Simple Quiz')
Answer=input('Are you ready to play the Quiz ? (yes/no) :')
score=0
total_questions=3
 
if Answer.lower()=='yes':
    Answer=input('Question 1: How many medals did India win in olympics?')
    if Answer.lower()=='35':
        score += 1
        print('correct Answer')
    else:
        print('Wrong Answer :(')
 
 
    answer=input('Question 2: Is Devops combination of Developers and operations? ')
    if answer.lower()=='yes':
        score += 1
        print('correct')
    else:
        print('Wrong Answer :(')
 
    answer=input('Question 3: Which language is best choice for Devops?')
    if answer.lower()=='Python':
        score += 1
        print('correct')
    else:
        print('Wrong Answer :(')
 
print('Thankyou for Playing this small quiz game, you attempted',score,"questions correctly!")
mark=(score/total_questions)*100
print('Marks obtained:',mark)
print('BYE!')
